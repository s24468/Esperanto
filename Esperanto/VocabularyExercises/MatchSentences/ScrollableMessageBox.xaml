<Window x:Class="Esperanto.VocabularyExercises.MatchSentences.ScrollableMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Esperanto.VocabularyExercises.MatchSentences"
        mc:Ignorable="d"
        Title="ScrollableMessageBox" Height="300" Width="280"
    WindowStartupLocation="CenterScreen">

    <Grid>
     
        <ComboBox x:Name="comboBox" 
                  IsEditable="True" 
                  VerticalAlignment="Top"
                  ItemsSource="{Binding YourWordList}"
                  PreviewTextInput="ComboBox_PreviewTextInput"
                  GotFocus="ComboBox_GotFocus"
                  IsDropDownOpen="True"/>
        <Grid>
            <!-- <Button Name="buttonSave" Content="Save to CSV" Click="ButtonSave_Click" Width="100" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20"/> -->
            <TextBox Name="textBoxInput" Width="300" Height="30" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="130,20,0,0"/>
        </Grid>
    </Grid>
</Window>
