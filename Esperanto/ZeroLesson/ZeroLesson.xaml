<Window x:Class="Esperanto.ZeroLesson"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Esperanto"
        mc:Ignorable="d"
        Title="ZeroLesson" Height="660" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10">
            <Button Content="Alfabeto kaj Prononco" Click="Alfabeto_Click" FontSize="30" />
            <Button Content="Prononco reala ekzemplo" Click="PrononcoRealExamples_Click" FontSize="30" />
            <Button Content="Nombroj" Click="Nombroj_Click" FontSize="30" />
            <Button Content="Praktiko Nombroj" Click="PraktikoNombroj_Click" FontSize="30" />
            <!-- Add more buttons as needed -->
        </StackPanel>
        <StackPanel  HorizontalAlignment="Right" VerticalAlignment="Center" Margin="10">
            <Image x:Name="popupImage" Visibility="Hidden" Width="400" Height="600"/>
        </StackPanel>
    </Grid>
</Window>
